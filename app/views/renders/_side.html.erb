		<%#=link_to @article.art_title, @article %>
	  <% else %>
	    <%= button_to 'Login', login_users_path, {:id => "button-color"}%>
	    <%= button_to 'New Registration', new_user_path ,{:id => "button-color"}%>
	  <% end %>
</div>
