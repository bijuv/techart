<div>
	<% if session[:user_id] %>
	    <%= "Welcome "+ session[:user_id] %>
	    <%=button_to "logout",{:action=>'logout', :controller=>'users'},{:id => "button-color"} %>
		<% @user = User.find_by_user_name(session[:user_id])%>
		<% @article = Article.find_by_user_id(@user.id)%>
