		<%= button_to "Delete Article", {:controller => "articles", :action => "delete_article"}, {:id => "button-color"} %>
		<%=button_to "Edit profile      ",{:action => "edit"},{:id => "button-color"} %>
		<%=button_to "Delete profile",{:action => "delete"},{:id => "button-color"}%>
	
		<%="Articles created by " + @user.user_name%>
		<br />
		<% for article in @user.articles %>
			=>> <%=link_to article.art_title,article %><br />
